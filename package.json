{
  "name": "jkpluta-electron",
  "homepage": "https://jkpluta.github.io",
  "version": "1.0.1",
  "main": "js/main.js",
  "description": "Eksperymentalna strona startowa",
  "author": {
    "name": "Jan K. Pluta",
    "email": "jkpluta@gmail.com",
    "url": "jkpluta.github.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkpluta/jkpluta-electron.git"
  },
  "build": {
    "appId": "55ede969-ed85-488b-8009-b878609302c8",
    "productName": "Jan K. Pluta",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "artifactName": "${name}-${version}-${arch}-setup.${ext}",
      "oneClick": true
    }
  },
  "scripts": {
    "start": "electron .",
    "start-bootstrap": "electron . --theme=bootstrap",
    "start-dark": "electron . --theme=dark",
    "start-light": "electron . --theme=light",
    "gulp": "gulp",
    "app": "gulp app && cd app && electron .",
    "app-dist": "gulp app && cd app && electron-builder",
    "app-dist-deb": "gulp app && cd app && electron-builder --linux deb",
    "app-dist-rpm": "gulp app && cd app && electron-builder --linux rpm",
    "app-dist-x64": "gulp app && cd app && electron-builder --win --x64",
    "app-dist-ia32": "gulp app && cd app && electron-builder --win --ia32",
    "app-pack": "gulp app && cd app && electron-packager .",
    "www": "gulp www && cd www && http-server -a localhost -p 60080 -o",
    "cordova": "gulp cordova",
    "nginx": "sudo gulp nginx"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "bootstrap": "^4.0.0-beta",
    "bootstrap-material-design": "4.0.0-beta.3",
    "ejs": "^2.5.7",
    "ejs-electron": "^2.0.0",
    "electron-json-storage": "^3.0.7",
    "font-awesome": "^4.7.0",
    "github": "^9.2.0",
    "github-api": "^3.0.0",
    "jquery": "^3.2.1",
    "markdown": "^0.5.0",
    "popper.js": "^1.12.3"
  },
  "devDependencies": {
    "@types/bootstrap": "^3.3.35",
    "@types/ejs": "^2.3.33",
    "@types/jquery": "^3.2.11",
    "browserify": "^14.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.4",
    "electron-packager": "^9.1.0",
    "gulp": "^3.9.1",
    "gulp-ejs": "^3.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "libxmljs": "^0.18.7",
    "vinyl-source-stream": "^1.1.0",
    "webpack": "^3.5.5"
  }
}
